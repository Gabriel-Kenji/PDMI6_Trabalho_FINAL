<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="PDMTPFINAL.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Button Text="MERCADORIAS"
                Clicked="Button_Clicked_Crud"
                TextColor="White"
                BackgroundColor="Blue"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50"
                Margin="10"/>
        <Button Text="MAPA"
                Clicked="Button_Clicked_Mapa"
                TextColor="White"
                BackgroundColor="Orange"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" 
                Margin="10"/>
        <Button Text="DUPLA"
                Clicked="Button_Clicked_Dupla"
                TextColor="White"
                BackgroundColor="Purple"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="50" 
                Margin="10"/>
    </StackLayout>

</ContentPage>
